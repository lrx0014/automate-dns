{
	"name": "automate-dns",
	"description": "Automatically manage Cloudflare DNS mappings",
	"private": true,
	"devDependencies": {
		"typescript": "5.8.3",
		"wrangler": "^4.46.0"
	},
	"scripts": {
		"cf-typegen": "wrangler types",
		"check": "tsc && wrangler deploy --dry-run",
		"deploy": "wrangler deploy",
		"dev": "pnpm seedLocalD1 && wrangler dev",
		"predeploy": "wrangler d1 migrations apply DB --remote",
		"seedLocalD1": "wrangler d1 migrations apply DB --local"
	},
	"dependencies": {
		"drizzle-orm": "^0.44.7",
		"hono": "^4.10.4"
	}
}
